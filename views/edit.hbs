<section class="clean-block clean-form dark">
    <div class="container">
        <div class="block-heading">
            <h2 class="text-info">Edit Your Style</h2>
            <h2 class="category-pink">{{category.category}}</h2>
            <a href="/{{category.id}}">Back</a>
            <p>â™¡ the style but want to add your own flair? Just submit your own pictures and description! </p>
        </div>
        <form action="/{{category.id}}?_method=PUT" method="POST">
            <div class="form-group">
                <label for="categoriesImg">Style Link</label>
                <input class="form-control" type="text" name="categoriesImg" id="categoriesImg"
                    value="{{category.categoriesImg}}" />
            </div>
            <div class="form-group">
                <label for="category">Category</label>
                <input class="form-control" type="text" name="category" id="category" value="{{category.category}}" />
            </div>
            <div class="form-group">
                <label for="description">Describe The Style</label>
                <textarea class="form-control" type="text" name="description" id="description"
                    value="{{category.description}}">
        </textarea>
            </div>
            <div class="form-group">
                <button class="btn btn-primary btn-block" type="submit" value="submit">Edit Your Room!</button>
            </div>
        </form>
    </div>
</section>